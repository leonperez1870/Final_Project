      <header class="header-6">
        <div class="container">
          <div class="row">
            <div class="navbar col-sm-12" role="navigation">
              <div class="navbar-header">
              </div>
            </div>
          </div>
        </div>
      </header>
      <section class="header-6-sub">
        <div class="background">&nbsp;</div>
        <div class="container">
          <div class="row">
            <div class="col-sm-8 col-sm-offset-2">
              <h3>Weclome to YelpDoc!</h3>
              <div class="row">
                <p class="lead col-sm-10 col-sm-offset-1">
                  Here you can search for Doctors in your area! YelpDoc is powered by Yelp and his holiness: Google.
                </p>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-10 col-sm-offset-1">
              <div class="signup-form">
                  <div class="clearfix">
                    <%= form_tag '/search', method: "get" do %>
                      <%= text_field_tag :term, nil, :placeholder => "Specialty", :class => "form-control" %>
                      <%= text_field_tag :location, nil, :placeholder => "Location", :class => "form-control" %>
                      <%= number_field_tag :radius_filter, nil, :placeholder => "Distance", :class => "form-control" %>
                      <%= submit_tag "Find a Doctor!", :class => "btn btn-primary" %>
                    <% end %>
                  </div>
              </div>
            </div>
          </div>
        </div>
      </section>